    "paths": {
        "/auth": {
            "post": {
                "tags": ["AUTH"],
                "summary": "Authenticate a user",
                "description": "Authenticate a user using either username or email along with the password",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "oneOf": [
                                    {
                                        "type": "object",
                                        "properties": {
                                            "username": {
                                                "type": "string",
                                                "description": "Username"
                                            },
                                            "password": {
                                                "type": "string",
                                                "description": "User password"
                                            }
                                        },
                                        "required": ["username", "password"]
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "email": {
                                                "type": "string",
                                                "description": "User email"
                                            },
                                            "password": {
                                                "type": "string",
                                                "description": "User password"
                                            }
                                        },
                                        "required": ["email", "password"]
                                    }
                                ]
                            },
                            "examples": {
                                "Username Authentication": {
                                    "summary": "Authentication using username",
                                    "description": "Example of authenticating with a username",
                                    "value": {
                                        "username": "jdoe",
                                        "password": "i%PHUUBi#5N&"
                                    }
                                },
                                "Email Authentication": {
                                    "summary": "Authentication using email",
                                    "description": "Example of authenticating with an email",
                                    "value": {
                                        "email": "sudo@email.com",
                                        "password": "i%PHUUBi#5N&"
                                    }
                                }
                                
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK: Authentication was successful",
                        "content": {
                            "application/json": {
                                "example": {
                                    "apiKey": "/NZjs+/WrlC029k+ahQQF+cr/uFrrRrC0ZODzm3mJO8="
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "BAD REQUEST: 'username', 'email' or 'password' was not provided or has an invalid format"
                    },
                    "401": {
                        "description": "UNAUTHORIZED: Invalid credentials, authentication failed"
                    }
                }
            }
        },
        "/admin/users/signup": {
            "post": {
                "tags": ["ADMIN"],
                "summary": "Creates a new admin user account",
                "description": "This endpoint allows administrators to create a new user account with administrative privileges. It is used to register a new admin user within the system. The request must contain the necessary details for user creation, including username, password, nickname and email. Upon successful creation, the system will generate a new admin user profile.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User Sign-Up"
                            },
                            "example": {
                                "username": "sudo",
                                "password": "MR%uQK4uX$7K",
                                "nickname":"Sudo Admin",
                                "email": "sudo@email.com"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "CREATED: The resource created successfully",
                        "content": {
                            "application/json": {
                                "example": {
                                    "userId": "8bbdbe71-6c4c-4760-ad4c-3a8dd049746e",
                                    "username": "sudo",
                                    "nickname":"Sudo Admin",
                                    "email": "sudo@email.com"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "BAD REQUEST: The body is malformed or has invalid data"
                    }
                }
            }
        },
